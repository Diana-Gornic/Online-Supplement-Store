<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proiect.fis.store.controllers.StockPageController">
    <children>
        <Button fx:id="backFromStock" layoutX="528.0" layoutY="332.0" mnemonicParsing="false" onAction="#backToManagerPage" text="Back" />
        <TableView fx:id="productTable" layoutX="26.0" layoutY="155.0" prefHeight="200.0" prefWidth="229.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Price" />
                <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="Quantity" />
            </columns>
        </TableView>
        <TextField fx:id="filterField" layoutX="26.0" layoutY="130.0" onKeyReleased="#searchProduct" prefHeight="26.0" prefWidth="230.0" promptText="Search here" />
      <Button fx:id="addToDemands" layoutX="277.0" layoutY="332.0" mnemonicParsing="false" onAction="#addToDemandsBucket" text="Add to demands" />
      <Button fx:id="goToDemandsPage" layoutX="277.0" layoutY="279.0" mnemonicParsing="false" onAction="#goToDemandsPage" text="View Demands" />
      <TextField fx:id="productName" layoutX="277.0" layoutY="130.0" prefHeight="31.0" prefWidth="131.0" promptText="Product name" />
      <TextField fx:id="productPrice" layoutX="277.0" layoutY="185.0" prefHeight="31.0" prefWidth="131.0" promptText="Product price" />
      <TextField fx:id="productQuantity" layoutX="277.0" layoutY="231.0" prefHeight="31.0" prefWidth="131.0" promptText="Product quantity" />
    </children>
</AnchorPane>
