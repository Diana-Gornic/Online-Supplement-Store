<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="555.0" prefWidth="825.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proiect.fis.store.controllers.BucketController">

    <TableView fx:id="myTable" layoutX="33.0" layoutY="23.0" prefHeight="448.0" prefWidth="345.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="122" text="Name" />
            <TableColumn fx:id="priceColumn" prefWidth="122" text="Price" />
            <TableColumn fx:id="quantityColumn" prefWidth="100" text="Quantity" />
        </columns>
    </TableView>

    <Button fx:id="placeOrderButton" layoutX="515.0" layoutY="96.0" mnemonicParsing="false" onAction="#placeOrder" text="Place order" />

    <Label fx:id="quantitySize" layoutX="621.0" layoutY="257.0" prefHeight="21.0" prefWidth="0.0" text="1" />
    <Label layoutX="504.0" layoutY="257.0" text="Set quantity:" />


    <Button fx:id="plusButton" layoutX="610.0" layoutY="216.0" mnemonicParsing="false" onAction="#changeQuantity" text="+" />

    <Button fx:id="minusButton" layoutX="613.0" layoutY="285.0" mnemonicParsing="false" onAction="#changeQuantity" text="-" />

    <Button fx:id="saveButton" layoutX="697.0" layoutY="252.0" mnemonicParsing="false" onAction="#saveQuantity" text="Save " />
    <Button fx:id="deleteButton" layoutX="665.0" layoutY="301.0" mnemonicParsing="false" onAction="#deleteProduct" text="Delete Product" />

    <Button fx:id="backToMainButton" layoutX="653.0" layoutY="476.0" mnemonicParsing="false" onAction="#backToMain" text="Back to Main" />

</AnchorPane>
